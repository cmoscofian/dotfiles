# Set dotfiles path variables
export BDOTDIR="$DOTDIR/bin"
export CACHEDIR="$DOTDIR/cache"
export GITDIR="$DOTDIR/git"
export SHELLDIR="$DOTDIR/shell"
export SSHDIR="$DOTDIR/ssh"
export UTILSDIR="$DOTDIR/utils"
export VIMDIR="$DOTDIR/vim"
export ZDOTDIR="$DOTDIR/zsh"

# Set XDG path variables
export XDG_CACHE_HOME="$CACHEDIR"
export XDG_CONFIG_HOME="$DOTDIR"
export XDG_DATA_HOME="$DOTDIR/xdg/data"
export XDG_STATE_HOME="$DOTDIR/xdg/state"

# Set general usage variables
export BROWSER="brave"
export EDITOR=vim
export MANPAGER="/bin/sh -c \"col -b | vim --not-a-term -c 'set ft=man ts=8 nomod nolist nonu noma nornu' -\""
export VISUAL=vim

# Set application specific env variables
export NVM_DIR="$DOTDIR/nvm"
export SDKMAN_DIR="$DOTDIR/sdk"
export GNUPGHOME="$DOTDIR/gnupg"

# Set golang env variables
export GOPATH="$HOME/go"
export GOBIN="$GOPATH/bin"

# Set python env variables
export PYBIN="$HOME/Library/Python/3.9/bin"

# Set path for golang executables
export PATH="$GOBIN:/usr/local/bin/go:$PATH"

# Set path for python executables
export PATH="$PYBIN:$PATH"
#
# Set path for node executables
export PATH="$NVM_BIN:$PATH"

# Set path to enable MPLab 8bit compiler
export PATH="/Applications/microchip/xc8/v2.32/bin:$PATH"

# Set path to enable gettext
export PATH="/usr/local/opt/gettext/bin:$PATH"

# Set dotfile functions
export PATH="$BDOTDIR:$PATH"

# Set path to enable clangd
export PATH="/usr/local/opt/llvm/bin:$PATH"

# Set java env variable
export JDTLS_HOME="$XDG_CACHE_HOME/lsp/jdtls"
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_271.jdk/Contents/Home"

# Set workspace
export WORKSPACE="$HOME/Workspace"

# Set private workspace
export PRIVATE="$WORKSPACE/private"
export PRIVATE_PROJECTS="$PRIVATE/projects"
export PRIVATE_SCRIPTS="$PRIVATE/scripts"

# Set work workspace
export WORK="$WORKSPACE/work"
export WORK_PROJECTS="$WORK/projects"
export WORK_SCRIPTS="$WORK/scripts"

# Set open-source workspace
export OPEN_SOURCE="$WORKSPACE/open-source"
export OPEN_SOURCE_PROJECTS="$WORK/projects"
export OPEN_SOURCE_SCRIPTS="$WORK/scripts"
