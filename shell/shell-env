# Set dotfiles path variables
export BDOTDIR="$DOTDIR/bin"
export GITDIR="$DOTDIR/git"
export SHELLDIR="$DOTDIR/shell"
export SSHDIR="$DOTDIR/ssh"
export UTILSDIR="$DOTDIR/utils"
export VIMDIR="$DOTDIR/vim"
export XDIR="$DOTDIR/x"
export ZSHDIR="$DOTDIR/zsh"

# Set XDG path variables
export XDG_CACHE_HOME="$DOTDIR/xdg/cache"
export XDG_CONFIG_HOME="$DOTDIR/xdg/config"
export XDG_DATA_HOME="$DOTDIR/xdg/data"
export XDG_RUNTIME_HOME="$DOTDIR/xdg/runtime"
export XDG_STATE_HOME="$DOTDIR/xdg/state"

# Set zsh variables
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# Set X-session variables
export XAUTHORITY="$XDG_STATE_HOME/.xauthority"
export XINITRC="$XDIR/client/xinitrc"

# Set general usage variables
export BROWSER="firefox"
export EDITOR="nvim"
export LANG="en_US.UTF-8"
export MANPAGER="/bin/sh -c \"col -b | vim --not-a-term -c 'set ft=man ts=4 sts=4 nomod nolist nonu noma nornu cc=0' -\""
export TERMINAL="alacritty"
export VISUAL="nvim"

# Set application specific env variables
export GNUPGHOME="$DOTDIR/gnupg"

# Set pass env variables
export PASSWORD_STORE_CLIP_TIME="30"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/pass"

# Set golang env variables
export GOPATH="$XDG_RUNTIME_HOME/go"
export GOBIN="$XDG_RUNTIME_HOME/go/bin"

# Set java env variables
export JDTLS_HOME="$XDG_DATA_HOME/lsp/jdtls"
export SDKMAN_DIR="$XDG_RUNTIME_HOME/java/sdk"

# Set node env variables
export NVM_DIR="$XDG_RUNTIME_HOME/node/nvm"

# Set python env variables
export PIP_CONFIG_FILE="$XDG_CONFIG_HOME/python/pip/pip.conf"
export PIPX_HOME="$XDG_RUNTIME_HOME/python/pipx"
export PIPX_BIN_DIR="$XDG_RUNTIME_HOME/python/pipx/bin"
export POETRY_HOME="$XDG_RUNTIME_HOME/python/pypoetry"

# Set rust env variables
export RUSTUP_HOME="$XDG_RUNTIME_HOME/rust/rustup"
export CARGO_HOME="$XDG_RUNTIME_HOME/rust/cargo"
export CARGO_BIN="$XDG_RUNTIME_HOME/rust/cargo/bin"

# Set path for golang executables
export PATH="$GOBIN:/usr/local/bin/go:/usr/local/go/bin:$PATH"

# Set path for node executables
export PATH="$NVM_BIN:$PATH"

# Set path for python executables
export PATH="$POETRY_HOME/bin:$PIPX_BIN_DIR:$PATH"

# Set path for rust executables
export PATH="$CARGO_BIN:$PATH"

# Set dotfile functions
export PATH="$BDOTDIR:$PATH"

# Set local executables
export PATH="$HOME/.local/bin:$PATH"

# Set workspace
export WORKSPACE="$HOME/Workspace"

# Set private workspace
export PRIVATE="$WORKSPACE/private"
export PRIVATE_PROJECTS="$PRIVATE/projects"
export PRIVATE_SCRIPTS="$PRIVATE/scripts"

# Set work workspace
export WORK="$WORKSPACE/work"
export WORK_PROJECTS="$WORK/projects"
export WORK_SCRIPTS="$WORK/scripts"

# Set open-source workspace
export OPEN_SOURCE="$WORKSPACE/open-source"
export OPEN_SOURCE_PROJECTS="$OPEN_SOURCE/projects"
export OPEN_SOURCE_SCRIPTS="$OPEN_SOURCE/scripts"

# Set study workspace
export STUDY="$WORKSPACE/study"
export STUDY_PROJECTS="$STUDY/projects"
export STUDY_SCRIPTS="$STUDY/scripts"
