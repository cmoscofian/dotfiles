# Set personal aliases for a full list of active aliases, run `alias`
alias bup="brew update && brew upgrade --greedy"
alias bcl="brew cleanup"
alias c=clear
alias dst="docker start"
alias dsp="docker stop"
alias dps="docker ps"
alias fgtk="fury get-token | sed '\$!D;s:.*\n::' | tr -d '[:space:]' | tee >(pbcopy)"
alias fcv="fury create-version"
alias fup="fury upgrade"
alias gbr="git branch"
alias gct="git commit"
alias gctn="git commit --no-verify"
alias gdev="git dev"
alias glg="git log --oneline --graph --all --decorate"
alias gft="git fetch --all"
alias gpl="git pull"
alias gps="git push"
alias gradd="f::groot && git add"
alias gsh="git show --pretty=oneline"
alias gst="git status"
alias gsw="git switch"
alias python=python3
alias pip=pip3
alias vim=nvim
