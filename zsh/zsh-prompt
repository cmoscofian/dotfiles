autoload -U colors; colors

# Set suffix to display number of nested shells
function() {
	local __level=$SHLVL
	local __suffix

	if [[ -n "$TMUX" ]]; then
		__level=$(( __level - 1 ))
	fi

	__suffix=$(printf '\$%.0s' {1..$__level})

	export PS1="[@%F{12}%1/%f\${vcs_info_msg_0_}]%F{1}%(1j.*.)%(?..!)%f${__suffix}: "
	export RPROMPT="%F{4}%~%f"
}

