syntax on
filetype plugin on
filetype indent on

let &t_SI.="\e[5 q"
let &t_SR.="\e[3 q"
let &t_EI.="\e[2 q"

set autoindent
set autoread
set background=dark
set backspace=eol,indent,start
set belloff=all
set clipboard=unnamed
set colorcolumn=120
set completeopt=menuone,noinsert,noselect
set hidden
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set linebreak
set mouse=a
set nobackup
set noswapfile
set nowrap
set number relativenumber
set path=.,**
set runtimepath+=/usr/local/opt/fzf
set scrolloff=5
set shiftwidth=4
set showcmd
set smartcase
set smartindent
set softtabstop=4
set splitright
set tabstop=4
set wildmenu

colorscheme nord

let mapleader = "\<space>"

nnoremap <leader>ev :vsplit $MYVIMRC<cr>
nnoremap <leader>sv :source $MYVIMRC<cr>

nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
nnoremap <up> <nop>

" FZF specific bindinds and settings
nnoremap <leader>ff :FZF<cr>

" NERDTree specific bindings and settings
let NERDTreeShowHidden=1
let NERDTreeMinimalUI=1

let g:NERDTreeDirArrowExpandable = '▹'
let g:NERDTreeDirArrowCollapsible = '▿'

nnoremap <expr> <c-b> g:NERDTree.IsOpen() ? ':NERDTreeClose<CR>' : @% == '' ? ':NERDTree<CR>' : ':NERDTreeFind<CR>'
