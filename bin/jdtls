#!/usr/bin/env bash

JAR="/Users/cmoscofian/.dotfiles/cache/lsp/jdtls/plugins/org.eclipse.equinox.launcher_1.6.400.v20210924-0641.jar"

java \
  -Declipse.application=org.eclipse.jdt.ls.core.id1 \
  -Dosgi.bundles.defaultStartLevel=4 \
  -Declipse.product=org.eclipse.jdt.ls.core.product \
  -Dlog.level=ALL \
  -Dlog.protocol=true \
  -noverify \
  -Xms1g \
  -Xmx2G \
  -jar $(echo "$JAR") \
  -configuration "$XDG_CACHE_HOME/lsp/jdtls/config_mac" \
  -data "$1"
