#!/usr/bin/env bash

JAR="$XDG_CACHE_HOME/lsp/jdtls/plugins/org.eclipse.equinox.launcher_*.jar"
LOMBOK_PATH="$XDG_CACHE_HOME/lsp/jdtls/lombok.jar"
PLATFORM="linux"

if [[ $(uname) -ne "Linux" ]]; then
    PLATFORM="mac"
fi

JAVA_HOME="$SDKMAN_DIR/candidates/java/current" java \
    -Declipse.application=org.eclipse.jdt.ls.core.id1 \
    -Dosgi.bundles.defaultStartLevel=4 \
    -Declipse.product=org.eclipse.jdt.ls.core.product \
    -Dlog.level=ALL \
    -Dlog.protocol=true \
    -Xms1g \
    -Xmx2G \
    -javaagent:"$LOMBOK_PATH" \
    -Xbootclasspath/a:"$LOMBOK_PATH" \
    -jar $(echo "$JAR") \
    -configuration "$XDG_CACHE_HOME/lsp/jdtls/config_$PLATFORM" \
    -data "$XDG_CACHE_HOME/lsp/workspace/$1" \
    --add-modules=ALL-SYSTEM \
    --add-opens java.base/java.util=ALL-UNNAMED \
    --add-opens java.base/java.lang=ALL-UNNAMED 2> $XDG_STATE_HOME/jdtls.log
